<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/title"
            android:src="@drawable/plate"/>

        <TextView
            android:id="@+id/CenterPage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="0"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:text="Take Fine Dining..."/>

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_below="@id/text6"
            android:text="...to a new level"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plate"
            android:layout_toLeftOf="@id/CenterPage"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:paddingTop="8dp"
            android:layout_marginLeft="16dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Taste"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plate"
            android:layout_toRightOf="@id/CenterPage"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:paddingTop="8dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Finesse"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_toLeftOf="@id/CenterPage"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Precision"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_toRightOf="@id/CenterPage"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Quality"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_toLeftOf="@id/CenterPage"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_purple"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Distinction"/>

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_toRightOf="@id/CenterPage"
            android:textColor="@android:color/white"
            android:background="#ff4081"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Art"/>

    </RelativeLayout>
</ScrollView>